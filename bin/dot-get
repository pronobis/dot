#!/bin/sh

# Check dependencies
if [ -z $DOT_DIR ]
then
    echo "ERROR: dot is not properly installed or re-login is needed."
    exit 1
fi
. $DOT_DIR/shell/tools.sh
if ! which git > /dev/null
then
    print_error "git is not installed."
    exit 1
fi


# ------------------------------------------------------------------------------
# Usage
# ------------------------------------------------------------------------------
print_usage()
{
    echo "Usage:"
    echo "  dot-get <command> <command_args>"
    echo
    echo "Commands:"
    echo "  list    - List all modules with repo URLs."
    echo
    echo "  status  - Show module update/install status."
    echo
    echo "  add     - Add a new module. Usage:"
    echo "              dot-get add <url> [<name>]"
    echo "            Arguments: "
    echo "              <url> - Module repository url"
    echo "              <name> - Module dir name. If not given, default is used."
    echo
    echo "  update  - Update a module. Usage:"
    echo "              dot-get update [<name>]"
    echo "            Arguments: "
    echo "              <name> - Module dir name or it's unique portion."
    echo "                       If not given, use the module in the current directory."
    echo "                       Can be 'all' in which case all modules are updated."
}


# ------------------------------------------------------------------------------
# Functions
# ------------------------------------------------------------------------------
get_modules()
{
    DOT_MODULES=""
    local p=""
    for i in `ls $DOT_DIR/modules | sort`
    do
        p="$DOT_DIR/modules/$i"
        if [ -d "$p" ] && [ -f $p/.git/config ]
        then
            DOT_MODULES=${DOT_MODULES:+${DOT_MODULES}:}$i
        fi
    done
}


get_module_urls()
{
    DOT_MODULE_URLS=""
    local IFS=':'
    local u=""
    local p=""
    for i in $DOT_MODULES
    do
        p="$DOT_DIR/modules/$i"
        # Get url
        cd $p
        u=$(git remote show -n origin | grep "Fetch URL")
        u=${u##*URL: }
        DOT_MODULE_URLS=${DOT_MODULE_URLS:+${DOT_MODULE_URLS} }$u
    done
}

is_updated()
{
    local name=$1
    cd "$DOT_DIR/modules/$name"
    local cur_branch=$(git rev-parse --abbrev-ref @{u})
    local sha_remote=$(git ls-remote ${cur_branch%/*} ${cur_branch#*/} | cut -f1)
    local sha_local=$(git rev-parse HEAD)

    if [ "$sha_local" = "$sha_remote" ]
    then
        echo "1"
    else
        echo "0"
    fi
}

is_installed()
{
    local name=$1

    # Read installed sha
    local sha_installed=""
    if [ -f $DOT_DIR/modules/$name/installed ]
    then
        sha_installed=$(cat $DOT_DIR/modules/$name/installed)
        sha_installed="${sha_installed#"${sha_installed%%[![:space:]]*}"}"
        sha_installed="${sha_installed%"${sha_installed##*[![:space:]]}"}"
    fi

    # Get local HEAD sha
    cd "$DOT_DIR/modules/$name"
    local sha_local=$(git rev-parse HEAD)

    if [ "$sha_local" = "$sha_installed" ]
    then
        echo "1"
    else
        echo "0"
    fi
}


clone_module()
{
    # Args
    local url=$1
    local name=$2

    # Delete temporary dir
    if [ -d $DOT_DIR/modules/temp_clone ]
    then
        rm -rf $DOT_DIR/modules/temp_clone
    fi

    # Download
    git clone --recursive $url $DOT_DIR/modules/temp_clone

    # Get final name
    if [ -z $name ]
    then
        # Get default name and trim it
        if [ -f $DOT_DIR/modules/temp_clone/default_name ]
        then
            name=$(cat $DOT_DIR/modules/temp_clone/default_name)
            name="${name#"${name%%[![:space:]]*}"}"
            name="${name%"${name##*[![:space:]]}"}"
        else
            print_error "No name was given for the module and no default name is specified."
            exit 1
        fi
    fi

    # Does this name already exist?
    if [ -e "$DOT_DIR/modules/$name" ]
    then
        print_error "A module with such name already exists."
        exit 1
    fi

    # Move to final name
    mv $DOT_DIR/modules/temp_clone $DOT_DIR/modules/$name

    # Get dependencies
    DEPENDENCIES=""
    if [ -f $DOT_DIR/modules/$name/dependencies ]
    then
        for i in $(cat $DOT_DIR/modules/$name/dependencies)
        do
            i="${i#"${i%%[![:space:]]*}"}"
            i="${i%"${i##*[![:space:]]}"}"
            DEPENDENCIES=${DEPENDENCIES:+${DEPENDENCIES} }$i
        done
    fi
}


get_max_module_name_len()
{
    MAX_NAME_LEN=$(echo $DOT_MODULES | awk '
BEGIN{FS=":"}
{
  ml=0
  for(i=1; i<=NF; ++i)
  {
    if(length($i)>ml)
      ml=length($i)
  }
  print ml
}' )
}


get_max_module_url_len()
{
    MAX_URL_LEN=$(echo $DOT_MODULE_URLS | awk '
BEGIN{FS=" "}
{
  ml=0
  for(i=1; i<=NF; ++i)
  {
    if(length($i)>ml)
      ml=length($i)
  }
  print ml
}' )
}


is_url_added()
{
    local url=$1

    # Is this url already in the urls?
    for i in $DOT_MODULE_URLS
    do
        if [ "$i" = "$url" ]
        then
            return 0
        fi
    done
    return 1
}


# ------------------------------------------------------------------------------
# Adding
# ------------------------------------------------------------------------------
cmd_add()
{
    # Arguments
    local url=$1
    local name=$2
    if [ -z "$url" ]
    then
        print_error "Incorrect command arguments!"
        echo
        print_usage
        exit 1
    fi

    print_status "Installing module $url:"

    # Get list of all modules with urls
    get_modules
    get_module_urls

    # Is this url already in the urls?
    if is_url_added "$url"
    then
       print_error "A module with such URL is already added."
       exit 1
    fi

    # Download
    clone_module $url $name
    # Cannot make this var local due to bug in dash
    # https://bugs.launchpad.net/ubuntu/+source/dash/+bug/139097
    all_deps=$DEPENDENCIES
    print_status "Done!"

    # Download dependencies
    while [ -n "$all_deps" ]
    do
        # Get updated list of all modules with urls
        get_modules
        get_module_urls

        # Get first dependency on the list
        url=${all_deps%% *}
        all_deps=${all_deps#$url}
        all_deps=${all_deps# }

        # If not yet added, clone
        if ! is_url_added $url
        then
            print_status "Installing dependency $url:"
            clone_module $url
            # Add dependencies of that one
            all_deps=${all_deps:+${all_deps} }$DEPENDENCIES
            print_status "Done!"
        else
            print_status "Ignoring installed dependency $url."
        fi
    done
}


# ------------------------------------------------------------------------------
# Updating
# ------------------------------------------------------------------------------
cmd_update()
{
    print_error "Not Implemented!"
    exit 1
}


# ------------------------------------------------------------------------------
# Status
# ------------------------------------------------------------------------------
cmd_status()
{
    # Get list of all modules
    get_modules
    get_max_module_name_len

    # Print header
    awk "BEGIN{OFS=\"-\"; NF=($MAX_NAME_LEN+3)
               printf \"+%s+---------+-----------+\n\",\$0
               printf \"| ${YELLOW}${BOLD}%-${MAX_NAME_LEN}s${NO_FORMAT} | ${YELLOW}${BOLD}%-3s${NO_FORMAT} | ${YELLOW}${BOLD}%-3s${NO_FORMAT} |\n\",\"Name\",\"Updated\",\"Installed\"
               printf \"+%s+---------+-----------+\n\",\$0}"

    # Get results
    local IFS=':'
    for i in $DOT_MODULES
    do
        # Since awk has problems with terminal escape \e in printf, we just print char 27
        echo "$i $(is_updated $i) $(is_installed $i)" | \
            awk "{printf \"| %-${MAX_NAME_LEN}s | %c[%sm%-7s%c[0m | %c[%sm%-9s%c[0m |\n\",\$1,27,\$2?\"92\":\"91\",\$2?\"Yes\":\"No\",27,27,\$3?\"92\":\"91\",\$3?\"Yes\":\"No\",27}"
    done

    # Print footer
    awk "BEGIN{\$0=\"\"; OFS=\"-\"; NF=($MAX_NAME_LEN+3); printf \"+%s+---------+-----------+\n\",\$0}"
}


# ------------------------------------------------------------------------------
# List
# ------------------------------------------------------------------------------
cmd_list()
{
    # Get list of all modules with urls
    get_modules
    get_module_urls
    get_max_module_name_len
    get_max_module_url_len

    # Print header
    awk "BEGIN{OFS=\"-\";
               NF=($MAX_NAME_LEN+3)
               printf \"+%s+\",\$0
               NF=($MAX_URL_LEN+3)
               printf \"%s+\n\",\$0
               printf \"| ${YELLOW}${BOLD}%-${MAX_NAME_LEN}s${NO_FORMAT} | ${YELLOW}${BOLD}%-${MAX_URL_LEN}s${NO_FORMAT} |\n\",\"Name\",\"URL\"
               NF=($MAX_NAME_LEN+3)
               printf \"+%s+\",\$0
               NF=($MAX_URL_LEN+3)
               printf \"%s+\n\",\$0}"

    # Print content
    echo "${DOT_MODULES}:::${DOT_MODULE_URLS}" | awk "BEGIN{FS=\":::\"}{
# Separate input
a=\$1
b=\$2
# Parse names
FS=\":\"
\$0=a
for (i=1; i<=NF; ++i)
  names[i-1]=\$i
# Parse urls
FS=\" \"
\$0=b
for (i=1; i<=NF; ++i)
  urls[i-1]=\$i
# Print
for (i=0; i<NF; ++i)
{
  printf \"| %-${MAX_NAME_LEN}s | %-${MAX_URL_LEN}s |\n\",names[i],urls[i]
}}"

    # Print footer
    awk "BEGIN{OFS=\"-\";
               NF=($MAX_NAME_LEN+3)
               printf \"+%s+\",\$0
               NF=($MAX_URL_LEN+3)
               printf \"%s+\n\",\$0}"
}


# ------------------------------------------------------------------------------
# Check and run command
# ------------------------------------------------------------------------------
command=$1
if [ "$command" = "add" ]
then
    shift
    cmd_add "$@"
elif [ "$command" = "update" ]
then
    shift
    cmd_update "$@"
elif [ "$command" = "status" ]
then
    shift
    cmd_status "$@"
elif [ "$command" = "list" ]
then
    shift
    cmd_list "$@"
else
    print_error "Incorrect command!"
    echo
    print_usage
    exit 1
fi
